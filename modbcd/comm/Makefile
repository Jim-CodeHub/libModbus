#-------------------------------------------------------------------------------------------------------
#																									   #
#								Makefile for libModbus source file 									   #
#																									   #
#-------------------------------------------------------------------------------------------------------


OBJS    = comm.o 
SUBDIRS = client server
 
 
#-------------------------------------------------------------------------------------------------------
#																									   #
#										  Make rules 									   		   	   #
#																									   #
#-------------------------------------------------------------------------------------------------------


.PHONY: all clean $(SUBDIRS)

all:$(SUBDIRS) $(OBJS)

$(SUBDIRS):ECHO
	$(MAKE) -C $@

ECHO:

%.o:%.c
	$(CC) $(CFLAGS) -c $^ -o $@

.PHONY:clean
clean:
	rm -rf *.o


